# ============================================
# ORBITR PRODUCTION CONFIGURATION
# ============================================
# Copy this file to .env.production and fill in your values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="file:/app/data/orbitr.db"

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV="production"
PORT=3000
BASE_URL="https://your-domain.com"
LOG_LEVEL="info"  # Options: debug, info, warn, error

# ============================================
# DOCKER CONFIGURATION
# ============================================
DOCKER_SOCKET="/var/run/docker.sock"
DOCKER_NETWORK="orbitr-network"
# Get your Docker GID with: getent group docker | cut -d: -f3
DOCKER_GID=999

# ============================================
# REVERSE PROXY CONFIGURATION
# ============================================
PROXY_TYPE="traefik"  # Options: traefik, caddy
DOMAIN="your-domain.com"
SSL_EMAIL="your-email@example.com"
AUTO_SSL="true"  # Enable Let's Encrypt
HTTP_PORT=80
HTTPS_PORT=443
TRAEFIK_LOG_LEVEL="INFO"

# ============================================
# SECURITY (IMPORTANT FOR PRODUCTION)
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="YOUR_NEXTAUTH_SECRET_HERE"
NEXTAUTH_URL="https://your-domain.com"

# ============================================
# AUTHENTICATION (Optional)
# ============================================
# GitHub OAuth
# GITHUB_CLIENT_ID="your_github_client_id"
# GITHUB_CLIENT_SECRET="your_github_client_secret"

# Google OAuth
# GOOGLE_CLIENT_ID="your_google_client_id"
# GOOGLE_CLIENT_SECRET="your_google_client_secret"

# ============================================
# NOTIFICATIONS (Optional)
# ============================================
# Discord
# DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/..."

# Slack
# SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."

# Email (SMTP)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER="your-email@example.com"
# SMTP_PASS="your-app-password"
# SMTP_FROM="Orbitr <noreply@your-domain.com>"

# ============================================
# BACKUP CONFIGURATION (Optional)
# ============================================
# S3-Compatible Storage (AWS S3, MinIO, Backblaze B2, etc.)
# BACKUP_ENABLED="true"
# BACKUP_S3_ENDPOINT="https://s3.amazonaws.com"
# BACKUP_S3_REGION="us-east-1"
# BACKUP_S3_BUCKET="orbitr-backups"
# BACKUP_S3_ACCESS_KEY="your_access_key"
# BACKUP_S3_SECRET_KEY="your_secret_key"
# BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM (cron format)
# BACKUP_RETENTION_DAYS=30

# ============================================
# MONITORING (Optional)
# ============================================
# ENABLE_METRICS="true"
# METRICS_PORT=9090

# ============================================
# ADVANCED SETTINGS
# ============================================
EXPERIMENTAL_FEATURES="false"
DEBUG="false"
NEXT_TELEMETRY_DISABLED="1"

# ============================================
# CONTAINER LIMITS (Optional)
# ============================================
# MAX_MEMORY="2g"
# MAX_CPU_CORES="2"
