# Environment variables for Orbitr

# ============================================
# DATABASE
# ============================================
DATABASE_URL="file:./data/orbitr.db"

# ============================================
# DOCKER
# ============================================
DOCKER_SOCKET="/var/run/docker.sock"
DOCKER_NETWORK="orbitr-network"
DOCKER_GID=999  # Docker group ID (run `getent group docker | cut -d: -f3`)

# ============================================
# SERVER
# ============================================
NODE_ENV="production"
PORT=3000
BASE_URL="http://localhost:3000"
LOG_LEVEL="info"  # debug, info, warn, error

# ============================================
# REVERSE PROXY
# ============================================
PROXY_TYPE="traefik"  # traefik or caddy
DOMAIN="localhost"
SSL_EMAIL=""  # Email for Let's Encrypt certificates
AUTO_SSL="false"  # Enable automatic SSL with Let's Encrypt
HTTP_PORT=80
HTTPS_PORT=443
TRAEFIK_LOG_LEVEL="INFO"

# ============================================
# AUTHENTICATION (Optional - Phase 3)
# ============================================
# NEXTAUTH_URL="http://localhost:3000"
# NEXTAUTH_SECRET=""  # Generate with: openssl rand -base64 32

# GitHub OAuth
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""

# Google OAuth
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# ============================================
# NOTIFICATIONS (Optional)
# ============================================
# Discord webhook for notifications
# DISCORD_WEBHOOK_URL=""

# Slack webhook for notifications
# SLACK_WEBHOOK_URL=""

# Email notifications (SMTP)
# SMTP_HOST=""
# SMTP_PORT=587
# SMTP_USER=""
# SMTP_PASSWORD=""
# SMTP_FROM=""

# ============================================
# BACKUP (Optional)
# ============================================
# S3-compatible storage for backups
# BACKUP_S3_ENDPOINT=""
# BACKUP_S3_BUCKET=""
# BACKUP_S3_ACCESS_KEY=""
# BACKUP_S3_SECRET_KEY=""
# BACKUP_S3_REGION="us-east-1"

# Local backup directory
# BACKUP_DIR="./backups"

# Automatic backup schedule (cron format)
# BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# ============================================
# MONITORING (Optional - Phase 4)
# ============================================
# Prometheus metrics
# PROMETHEUS_ENABLED="false"
# PROMETHEUS_PORT=9090

# Grafana
# GRAFANA_ENABLED="false"
# GRAFANA_PORT=3001

# ============================================
# SECURITY
# ============================================
# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=""

# API rate limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000  # 1 minute

# CSRF protection
CSRF_ENABLED="true"

# ============================================
# ADVANCED
# ============================================
# Feature flags
EXPERIMENTAL_FEATURES="false"
DEBUG="false"

# Extension registry URL
EXTENSION_REGISTRY_URL="https://registry.orbitr.io/registry.json"

# Extension installation directory
EXTENSION_DIR="./extensions/installed"

# Cache settings
CACHE_TTL=3600  # 1 hour
REGISTRY_CACHE_TTL=86400  # 24 hours

# ============================================
# DEVELOPMENT ONLY
# ============================================
# NEXT_PUBLIC_DEV_MODE="true"
# SKIP_ENV_VALIDATION="false"
